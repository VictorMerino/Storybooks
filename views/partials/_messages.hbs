{{#if errors}}
  <div class="errors">
    <ul class="people_list collection">
      {{#each errors}}
        <li class="collection-item red-text">{{this.msg}}</li>
      {{/each}}
    </ul>
  </div>
{{else}}
  <h6 class="green-text">No errors</h6>
{{/if}}

{{#if successMsg}}
  <div class="green-text">{{successMsg}}</div>
{{/if}}

{{#if errorMsg}}
  <div class="red-text">{{errorMsg}}</div>
{{/if}}
